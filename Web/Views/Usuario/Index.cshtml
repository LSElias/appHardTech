@{
    ViewBag.Title = "Listado de Usuarios";
}

<div class="container-fluid m-auto text-center pt-5">
    <h1 class="page-title">Listado de Usuarios</h1>
</div>


<script>
    $(document).ready(function () {


        $('#productoGrid').dataTable({
            "processing": true,
            "serverSide": true,
            "filter": true,
            "bFilter": true,
            "orderMulti": false,
            "pageLength": 5,
            "scrollX": true,
            "language": {
                "lengthMenu": "Muestre _MENU_ productos por página",
                "zeroRecords": "No logramos encontrar los productos - Perdón :(",
                "info": "Mostrando página _PAGE_ de _PAGES_",
                "infoEmpty": "No hay productos para mostrar",
                "infoFiltered": "(filtrado de _MAX_ productos totales)",
                "paginate": {
                    "first": "Primera",
                    "last": "Última",
                    "next": "Siguiente",
                    "previous": "Previa"
                },
                "search": "Buscar  "
            },

            "ajax": {
                "url": "/Usuario/LoadUsuario",
                "type": "POST",
                "datatype": "json"
            },
            "columnDefs":
                [
                    {
                        "targets": [0],
                        "visible": false,
                        "searchable": false
                    },
                    {
                        "targets": [4],
                        "visible": true,
                        "searchable": false,
                        orderable: false,
                    },
                ],

            "columns": [
                { "data": "Id", "name": "Id", "autoWidth": true },
                { "data": "Nombre", "name": "Nombre", "autoWidth": true },
                { "data": "Correo", "name": "Correo", "autoWidth": true },
                { "data": "Estado", "name": "Estado", "autoWidth": true },
                {
                    "render": function (data, type, full, meta) {
                        return '<a title="Perfil de Usuario" class="btn Detalle" href="/Producto/Detalle/'
                            + full.Id + '"> <i class="fa-solid fa-circle-info fa-xl"></i> </a>';


                    }
                },

                {
                    "render": function (data, type, full, meta) {

                        var returnString = ''
                        if (full.eID != 1) {
                            returnString = '<a title="Activar cuenta" onclick = "CambiarEstado(' + full.Id + ', 1)" class="btn Detalle" > <i class="fa-solid fa-arrow-up" style="color: #68a83e;"></i> </a >';
                        } else {
                            returnString = '<a title="Desactivar cuenta" onclick = "CambiarEstado(' + full.Id + ', 2)" class="btn Detalle" > <i class="fa-solid fa-arrow-down" style="color: #932f3e;"></i>  </a >';
                        }
                        return returnString;
                    }
                },
            ]

        });
    });



    function CambiarEstado(idUsuario, idEstado) {

        console.log(idEstado, idUsuario);
        Swal.fire({
            title: '¿Estas seguro?',
            text: "Vas a cambiar el estado de esta cuenta",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#a847ea',
            cancelButtonColor: '#d33',
            confirmButtonText: "Cambiar",
            cancelButtonText: "Cancelar"

        }).then((resulto) => {
            if (resulto.isConfirmed) {

                $.ajax({
                    method: "POST",
                    url: "/Usuario/CambiarEstado",
                    data: {
                        "idEstado": idEstado, "idUsuario": idUsuario
                    },
                    success: function (result) {
                        Swal.fire(
                            '¡Cambio generado con exito!',
                            'El estado de este usuario ha cambiado',
                            'success'
                        )
                        $('#productoGrid').DataTable().destroy();
                        $('#productoGrid').dataTable({
                            "processing": true,
                            "serverSide": true,
                            "filter": true,
                            "bFilter": true,
                            "orderMulti": false,
                            "pageLength": 5,
                            "scrollX": true,
                            "language": {
                                "lengthMenu": "Muestre _MENU_ productos por página",
                                "zeroRecords": "No logramos encontrar los productos - Perdón :(",
                                "info": "Mostrando página _PAGE_ de _PAGES_",
                                "infoEmpty": "No hay productos para mostrar",
                                "infoFiltered": "(filtrado de _MAX_ productos totales)",
                                "paginate": {
                                    "first": "Primera",
                                    "last": "Última",
                                    "next": "Siguiente",
                                    "previous": "Previa"
                                },
                                "search": "Buscar  "
                            },

                            "ajax": {
                                "url": "/Usuario/LoadUsuario",
                                "type": "POST",
                                "datatype": "json"
                            },
                            "columnDefs":
                                [
                                    {
                                        "targets": [0],
                                        "visible": false,
                                        "searchable": false
                                    },
                                    {
                                        "targets": [4],
                                        "visible": true,
                                        "searchable": false,
                                        orderable: false,
                                    },
                                ],

                            "columns": [
                                { "data": "Id", "name": "Id", "autoWidth": true },
                                { "data": "Nombre", "name": "Nombre", "autoWidth": true },
                                { "data": "Correo", "name": "Correo", "autoWidth": true },
                                { "data": "Estado", "name": "Estado", "autoWidth": true },
                                {
                                    "render": function (data, type, full, meta) {
                                        return '<a title="Perfil de Usuario" class="btn Detalle" href="/Producto/Detalle/'
                                            + full.Id + '"> <i class="fa-solid fa-circle-info fa-xl"></i> </a>';


                                    }
                                },
                                {
                                    "render": function (data, type, full, meta) {

                                        var returnString = ''
                                        if (full.eID != 1) {
                                            returnString = '<a title="Activar cuenta" onclick = "CambiarEstado(' + full.Id + ', 1)" class="btn Detalle" > <i class="fa-solid fa-arrow-up" style="color: #68a83e;"></i> </a >';
                                        } else {
                                            returnString = '<a title="Desactivar cuenta" onclick = "CambiarEstado(' + full.Id + ', 2)" class="btn Detalle" > <i class="fa-solid fa-arrow-down" style="color: #932f3e;"></i>  </a >';
                                        }
                                        return returnString;
                                    }
                                },
                            ]

                        });


                    },
                    error: function (xhr, status, error) {
                        console.log("Error: " + error, "No Error: " + xhr.status)
                    }
                });
            }
        })
    }



</script>


<div class=" ">
    <br />
    <div style=" width:101%; margin:0 auto;">
        <table id="productoGrid" class="table table-striped table-bordered dt-responsive nowrap overflow-x-scroll" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Id</th> @* 0 *@
                    <th>Nombre</th> @* 1 *@
                    <th>Correo</th> @* 3 *@
                    <th>Estado</th> @* 2 *@
                    <th></th> @* 2 *@
                    <th></th> @* 2 *@

                </tr>
            </thead>
        </table>
    </div>
</div>

