<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Hardtech </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="js/script.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
    @RenderSection("styles", required: false)
</head>
<body>
    @Html.Partial("_Menu")
    <div class="container-xl">
        @RenderBody()
    </div>
    <div class="container-fluid footerColor mt-5">
        <hr />
        <div class="container-lg py-4">
            <footer>
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <img class="logo2" src="~/src/img/Logo_Z.png">
                    </div>
                    <div class="col-md-4">
                        <h4 class="foot-Title"> PRODUCTOS </h4>
                        <ul>
                            <li style="list-style:none">
                                @Html.ActionLink("Computadoras", "Index", "Autor", null, new { @class = "nav-link2" })
                            </li>
                            <li style="list-style:none">

                                @Html.ActionLink("Componentes", "IndexAdmin", "Libro", null, new { @class = "nav-link2" })
                            </li>
                            <li style="list-style:none">
                                @Html.ActionLink("Periféricos", "IndexAdmin", "Orden", null, new { @class = "nav-link2" })
                            </li>
                            <li style="list-style:none">
                                @Html.ActionLink("Accesorios", "IndexAdmin", "Orden", null, new { @class = "nav-link2" })
                            </li>
                        </ul>
                    </div>
                    <div class="col-md-4">
                        <a class="foot-Title" href="/"><h4> Contacto </h4></a>
                        <a class="foot-Title" href="/"><h4> Terminos de Servicio </h4></a>
                    </div>
                </div>
                <p style=" color: #ffffffc4; font-size: 10px "> Copyright ©Hardtech - @DateTime.Now.Year</p>
            </footer>
        </div>
    </div>

     @Scripts.Render("~/bundles/jquery")
    @*Scripts.Render("~/bundles/bootstrap")*@
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>

    <script src="https://cdn.datatables.net/v/dt/dt-1.13.4/datatables.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
