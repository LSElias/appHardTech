@model IEnumerable<Infraestructure.Models.Orden>

@{
    ViewBag.Title = "Historial de ordenes";
}

<div class="container-fluid m-auto text-center pt-4">
    <h1 class="page-title">Historial de ordenes</h1>
</div>


    <div style=" width:101%; margin:0 auto;">

        <table id=" " class="table table-striped table-bordered dt-responsive nowrap overflow-x-scroll" width="100%" cellspacing="0">
            <tr>
                <th style="background-color: black; color: white; text-align: center">
                    @Html.DisplayNameFor(model => model.IdOrden)
                </th>
                <th style="background-color: black; color: white; text-align: center">
                    @Html.DisplayNameFor(model => model.FechaInicio)
                </th>
                <th style="background-color: black; color: white; text-align: center">
                    @Html.DisplayNameFor(model => model.Estado_Orden.Nombre)
                </th>
                <th style="background-color: black; color: white; text-align: center">
                    Detalle
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td style=" background-color: #ffffffd8; text-align: center">
                        @Html.DisplayFor(modelItem => item.IdOrden)
                    </td>
                    <td style=" background-color: #ffffffd8; text-align: center">
                        @Html.DisplayFor(modelItem => item.FechaInicio)
                    </td>
                    <td style=" background-color: #ffffffd8; text-align: center">
                        @Html.DisplayFor(modelItem => item.Estado_Orden.Nombre)
                    </td>
                    <td style=" background-color: #ffffffd8; text-align: center">
                        <a class="btn" href="/Orden/Detalle/@item.IdOrden">
                        <i class="fa-solid fa-circle-info fa-xl"></i> 
                        </a>
                    </td>
                </tr>
            }

        </table>

    </div>

