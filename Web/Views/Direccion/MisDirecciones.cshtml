
@{
    ViewBag.Title = "Mis Direcciones";
}



<div class="container-fluid m-auto text-center pt-5">
    <h1 class="page-title">Mis direcciones</h1>
</div>


<script>
    $(document).ready(function () {


        $('#productoGrid').dataTable({
            "processing": true,
            "serverSide": true,
            "filter": true,
            "bFilter": true,
            "orderMulti": false,
            "pageLength": 5,
            "scrollX": true,
            "language": {
                "lengthMenu": "Muestre _MENU_ productos por página",
                "zeroRecords": "No logramos encontrar los productos - Perdón :(",
                "info": "Mostrando página _PAGE_ de _PAGES_",
                "infoEmpty": "No hay productos para mostrar",
                "infoFiltered": "(filtrado de _MAX_ productos totales)",
                "paginate": {
                    "first": "Primera",
                    "last": "Última",
                    "next": "Siguiente",
                    "previous": "Previa"
                },
                "search": "Buscar  "
            },

            "ajax": {
                "url": "/Direccion/LoadDirecciones",
                "type": "POST",
                "datatype": "json"
            },
            "columnDefs":
                [
                    {
                        "targets": [0],
                        "visible": false,
                        "searchable": false
                    },
                    {
                        "targets": [5],
                        "visible": true,
                        "searchable": false,
                        orderable: false,
                    },
                ],

            "columns": [
                { "data": "Id", "name": "Id", "autoWidth": true },
                { "data": "Provincia", "name": "Provincia", "autoWidth": true },
                { "data": "Canton", "name": "Cantón", "autoWidth": true },
                { "data": "Distrito", "name": "Distrito", "autoWidth": true },
                { "data": "DireccionExacta", "name": "Direccion Exacta", "autoWidth": true },
                {
                    "render": function (data, type, full, meta) {
                        return '<a title="Perfil de Usuario" class="btn Detalle" href="/Producto/Detalle/'
                            + full.Id + '"> <i class="fa-solid fa-circle-info fa-xl"></i> </a>';


                    }
                },

            ]

        });
    });



    function CambiarEstado(idUsuario, idEstado) {

        console.log(idEstado, idUsuario);
        Swal.fire({
            title: '¿Estas seguro?',
            text: "Vas a cambiar el estado de esta cuenta",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#a847ea',
            cancelButtonColor: '#d33',
            confirmButtonText: "Cambiar",
            cancelButtonText: "Cancelar"

        }).then((resulto) => {
            if (resulto.isConfirmed) {

                $.ajax({
                    method: "POST",
                    url: "/Usuario/CambiarEstado",
                    data: {
                        "idEstado": idEstado, "idUsuario": idUsuario
                    },
                    success: function (result) {
                        Swal.fire(
                            '¡Cambio generado con exito!',
                            'El estado de este usuario ha cambiado',
                            'success'
                        )
                        $('#productoGrid').DataTable().destroy();
                        $('#productoGrid').dataTable({
                            "processing": true,
                            "serverSide": true,
                            "filter": true,
                            "bFilter": true,
                            "orderMulti": false,
                            "pageLength": 5,
                            "scrollX": true,
                            "language": {
                                "lengthMenu": "Muestre _MENU_ productos por página",
                                "zeroRecords": "No logramos encontrar los productos - Perdón :(",
                                "info": "Mostrando página _PAGE_ de _PAGES_",
                                "infoEmpty": "No hay productos para mostrar",
                                "infoFiltered": "(filtrado de _MAX_ productos totales)",
                                "paginate": {
                                    "first": "Primera",
                                    "last": "Última",
                                    "next": "Siguiente",
                                    "previous": "Previa"
                                },
                                "search": "Buscar  "
                            },

                            "ajax": {
                                "url": "/Usuario/LoadUsuario",
                                "type": "POST",
                                "datatype": "json"
                            },
                            "columnDefs":
                                [
                                    {
                                        "targets": [0],
                                        "visible": false,
                                        "searchable": false
                                    },
                                    {
                                        "targets": [5],
                                        "visible": true,
                                        "searchable": false,
                                        orderable: false,
                                    },
                                ],

                            "columns": [
                                { "data": "Id", "name": "Id", "autoWidth": true },
                                { "data": "Nombre", "name": "Nombre", "autoWidth": true },
                                { "data": "Correo", "name": "Correo", "autoWidth": true },
                                { "data": "Estado", "name": "Estado", "autoWidth": true },
                                {
                                    "render": function (data, type, full, meta) {
                                        return '<a class="btn Editar" href="/Producto/Editar/'
                                            + full.Id + '"><i class="fa-solid fa-pen fa-xl"></i></a>'; 
                                    }
                                },
                            ]

                        });


                    },
                    error: function (xhr, status, error) {
                        console.log("Error: " + error, "No Error: " + xhr.status)
                    }
                });
            }
        })
    }



</script>


<div class=" ">
    <br />
    <div class="mb-3" style="float:right">
        <a id="redireccion" href="/Direccion/Crear/" class="btn btn-gradient"> <i class="fa-solid fa-plus"> </i> </a>
    </div>
    <div style=" width:101%; margin:0 auto;">
        <table id="productoGrid" class="table table-striped table-bordered dt-responsive nowrap overflow-x-scroll" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Id</th> @* 0 *@
                    <th>Provincia</th> @* 1 *@
                    <th>Cantón</th> @* 3 *@
                    <th>Distrito</th> @* 2 *@
                    <th>Dirección Exacta</th> @* 2 *@
                    <th></th> @* 2 *@

                </tr>
            </thead>
        </table>
    </div>
</div>

