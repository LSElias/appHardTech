@{
    ViewBag.Title = "Home Page";
}

@Scripts.Render("~/bundles/jquery")   
@Scripts.Render("~/bundles/sweetalert")

<main>
    <section style="margin-bottom:1em">
        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block" src="~/src/img/HT-1.png" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="" src="~/src/img/HT-1.png" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="" src="~/src/img/HT-1.png" alt="Third slide">
                </div>
            </div>
        </div>
    </section>
    <div class="row">
        <div class="col-lg-3" style="margin-bottom: 1em" aria-labelledby="gettingStartedTitle">
            <a href="/Producto">
                <div class="market-card">
                    <img class="bottom-card-1" src="~/src/img/Comp.png" alt="Computadora">
                </div>
            </a>

        </div>
        <div class="col-lg-3" style="margin-bottom: 1em" aria-labelledby="gettingStartedTitle">
            <a href="/Producto">

                <div class="market-card">
                    <img class="bottom-card-1" src="~/src/img/Component.png" alt="Componentes">
                </div>
            </a>
        </div>

        <div class="col-lg-3" style="margin-bottom: 1em" aria-labelledby="gettingStartedTitle">
            <a href="/Producto">
                <div class="market-card">
                    <img class="bottom-card-1" src="~/src/img/Perifericos.png" alt="Periféricos">
                </div>
            </a>
        </div>

        <div class="col-lg-3" style="margin-bottom: 1em">
            <a href="/Producto">
                <div class="market-card">
                    <img class="bottom-card-1" src="~/src/img/Accesorios.png" alt="Accesorios">
                </div>
            </a>
        </div>
    </div>

    <section id="square" style="
    background-color: black;
    border-width: 1px;
    border-style: solid;
    border-image: linear-gradient(180deg, rgba(255,156,0,1) 0%, rgba(213,0,255,1) 100%) 1;
    height: 30vh;
    margin: 0px auto;
    ">
        <div>
            <div class="square-text">
                <p>
                    Parece que no tienes una cuenta o no has iniciado sesión.
                </p>
                <br />
                <p>Si ya tienes una cuenta <a href="/">¡Inicia Sesión!</a></p>
                <p>¿Aún no tienes una? <a href="/">¡Deberías Registrate!</a></p>
            </div>
        </div>

    </section>

</main>