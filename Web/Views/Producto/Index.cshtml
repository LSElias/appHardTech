@model  IEnumerable<Infraestructure.Models.Producto>

@{
    ViewBag.Title = " Index ";
}

<h2>Index</h2>

<div>Productos</div>
<div class="row">
    <div class="col-lg-3">
        <h1 class="my-4">
            Categoría
        </h1>
        <div>
            @* Categoría *@
            @foreach (var cat in (List<Infraestructure.Models.Categoria>)ViewBag.listaCategorias)
            {
                <button class="list-group-item filterAutor" data-idcategoria="@cat.Id"> @cat.Nombre </button>
            }
            
        </div>
    </div>

    <div class="col-lg-9">
        <div id="productos" class="row">
            @foreach(var item in Model)
            {

                <div class="col-sm-3">
                    <div class="card">
                        @if (item.Foto.Count > 0)
                        {
                        <img src="data:image/jpeg;charset=utf-8;base64,@Convert.ToBase64String(item.Foto.First().Media)"
                             alt="Imagen @Html.DisplayFor(modelItem => item.Nombre)" class="img-thumbnail" />
                        }
                        <div class="card-body">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Nombre)</h5>
                            <h6 class="card-subtitle mb-2 text-muted"> @Html.DisplayNameFor(model => model.Categoria.Nombre): @Html.DisplayFor(modelItem => item.Categoria.Nombre)</h6>
                            <p class="card-text">   @Html.DisplayNameFor(model => model.Precio):  @Html.DisplayFor(modelItem => item.Precio)</p>

                            <div class="btn-group row" role="group">
                                @* Detalle Ajax Modal *@
                                <div class="col-md-12">
                                    <a href="/Producto/Detalle/@item.Id" class="btn btn-warning detalle" >Detalle</a>
                                </div>
                                <div class="col-md-12">
                                    <button class="btn btn-primary">Comprar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                }
        </div>
    </div> 
</div>