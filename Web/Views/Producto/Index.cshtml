@model  IEnumerable<Infraestructure.Models.Producto>

@{
    ViewBag.Title = " Index ";
}

<div class="container-fluid m-auto text-center pt-5">
    <h1 class="page-title mb-4"> Nuestros productos</h1>
</div>

<div class="row mt-3" style="box-shadow: 0px 0px 20px #262626; border-radius: 0px 10px 10px 0px; ">
    <h5 class="card-header pt-3 my-2 foot-Title text-center">Búsqueda por nombre</h5>
    @* Llamado por nombre  *@
<div class="row my-3 mx-3">
    <div class="col-md-11">
            <form id="formBusqueda">
                    <div class="input-group">
                        @Html.TextBox("filtro", "", new { @class = "form-control", @placeholder = "Ingrese el nombre" })
                        <button type="button" id="btnBuscar" class="btn  btn-comprar">Buscar</button>
                    </div>
            </form>
    </div>
    <div class="col-md-1">
                <div class="card-body">
                    <div class="input-group">
                        <button type="button" id="btnOrdenar" value="0" class="btn btn-detalle"><i class="fa-solid fa-sort fa-xl" style="color: #000000;"></i></button>
                    </div>
        </div>
    </div>
</div>


    <div class="col-lg-3">
        <h1 class="my-4 foot-Title text-center">

            Categoría
        </h1>
        <div>
            @* Categoría *@
            @foreach (var cat in (List<Infraestructure.Models.Categoria>)ViewBag.listaCategorias)
            {
                <div class="block-cat">
                    <button class="m-auto list-group-item filterItem notfair " data-idcategoria="@cat.Id"> @cat.Nombre </button>
                </div>
            }
            <div class="block-cat">
                <button class="m-auto list-group-item filterItem notfair " data-idcategoria=0> Todos </button>
            </div>

        </div>
    </div>

    <div class="col-lg-9 productos" style="background-color:#262626; border-radius: 0px 0px 10px 0px;">
        <div id="productos" class="row">
            @foreach (var item in Model)
            {

                <div class="col-sm-4" style="padding: 0.9em;">
                    <div class="card align-items-center individualproduct">
                        @if (item.Foto.Count > 0)
                        {
                            <img style="height:200px; width:200px;" src="data:image/jpeg;charset=utf-8;base64,@Convert.ToBase64String(item.Foto.First().Media)"
                                 alt="Imagen @Html.DisplayFor(modelItem => item.Nombre)" class="img-thumbnail" />
                        }
                        else
                        {
                            <img style="height:200px; width:200px;" src="~/src/img/no-photo.jpg"
                                 alt="Imagen @Html.DisplayFor(modelItem => item.Nombre)" class="img-thumbnail" />
                        }
                        <div class="card-body ">
                            <h5 class="card-title"><span>@Html.DisplayFor(modelItem => item.Nombre)</span> </h5>
                            <p class="card-text">   @Html.DisplayNameFor(model => model.Precio):  <span>@Html.DisplayFor(modelItem => item.Precio)</span></p>

                            <div class="btn-group row card-footer" role="group">
                                @* Detalle Ajax Modal *@
                                <div class="col-md-12 ">
                                    <a href="/Producto/Detalle/@item.IdProducto" class="btn btn-large btn-detalle">Detalle</a>
                                </div>
                                <div class="col-md-12">
                                    @if (item.Cantidad > 0)
                                    {
                                        <button id="comprar" class="btn btn-large btn-comprar" data-id="@item.IdProducto">Comprar</button>
                                    }
                                    else
                                    {
                                        <button id="comprar" class="btn btn-large btn-comprar disabled">Comprar</button>

                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


@section Scripts{
    <script type="text/javascript">

        $(document).on('click', '.filterItem',
            function () {
                var idCategoria = $(this).data('idcategoria');
                $.ajax({
                    method: "GET",
                    url: "/Producto/ProductosxCat",
                    data: { "id": idCategoria },
                    success: function (result) {
                        $("#productos").html("");
                        $("#productos").html(result)
                    },
                    error: function (xhr,status,error) {
                        console.log("Error: " + error, "No error: " + xhr.status);
                    }
                });
            });

        $(document).on('click', '#comprar',
            function () {
                var ctr = $(this);
                var idProducto = $(this).data('id');
                $.ajax({
                    method: "GET",
                    url: "/Orden/ordenProducto",
                    data: { "idProducto": idProducto },
                    success: function (data) {
                        $("#cantProductos").html('');
                        $("#cantProductos").html(data);
                    }, error: function (xhr, status, error) {
                        console.log("Error: " + error + ", No Error: " + xhr.status);
                    },
                });
            });

        $(document).on('click', '#btnOrdenar',
            function () {
                var oldvalue = $('#btnOrdenar').val();                 
                var value;
                if (oldvalue == 0) {
                    value = 1;
                } else {
                    value = 0;                    
                }
                $.ajax({
                    method: "GET",
                    url: "/Producto/OrdenarProductos",
                    data: { "valor": oldvalue },
                    success: function (data) {
                        $("#productos").html("");
                        $("#productos").html(data);
                        $('#btnOrdenar').val(value);
                    }, error: function (xhr, status, error) {
                        console.log("Error: " + error + ", No Error: " + xhr.status);
                    },
                });
            });



        $(function () {
            var lista = @Html.Raw(Json.Encode(ViewBag.listaNombres));
            $("#filtro").autocomplete({
                source: lista
            });
        })
        $('#btnBuscar').click(function () {
            var filtro = $('#filtro').val();
            $.ajax({
                method: "POST",
                url: "/Producto/ProductosXNombre",
                data: { "filtro": filtro },
                success: function (result) {
                    $("#productos").html("");
                    $("#productos").html(result);
                    $('#filtro').val("");
                }, error: function (xhr, status, error) {
                    console.log("Error: " + error, "No Error: " + xhr.status)
                }
            });
        });
    </script>



    }