@model Infraestructure.Models.Evaluacion

@using (Html.BeginForm("GuardarEvaluacionCliente", "Factura", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdEvaluado)
        @Html.HiddenFor(model => model.IdEvaluador)
        <input type="text" hidden name="idOrden" value="@ViewBag.idOrden" />
        <input type="text" hidden name="idProducto" value="@ViewBag.idProducto" />

        <div class="form-group">
            <h6 class="head-Title">Evaluando a:<span style="color: #bb66ee"> @Model.Usuario1.Nombre @Model.Usuario1.Apellido1 @Model.Usuario1.Apellido2  </span>  </h6>
        </div>

        <div class="form-group my-3">
            @Html.LabelFor(model => model.Escala, htmlAttributes: new { @class = "head-Title col-md-12" })
            <div class="col-md-10 my-2">
                @Html.DropDownListFor(model => model.IdEscala,
                (SelectList)ViewBag.idEscala, null,
                htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Escala, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group my-3">
            @Html.LabelFor(model => model.Comentario, htmlAttributes: new { @class = "head-Title col-md-12" })
            <div class="col-md-10 my-2">
                @Html.EditorFor(model => model.Comentario, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Comentario, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group my-1">
            <div class="col-md-offset-2 col-md-10">
                <input id="guardar" type="submit" value="Enviar" class="btn btn-comprar" />
            </div>
        </div>
    </div>
}

