
@{
    ViewBag.Title = "Dashboard";
}

<div>
    <h2 class="page-title"> Dashboard </h2>
    <div class="box-eval p-3 col-md-12 row center justify-content-center">
        <h3 class="page-title"> Reportes </h3>
        <div class="col-md-6 my-5 mx-1" style="background-color:#ffffffbe; border-radius: 15px;">
            <canvas id="grafico5"></canvas>
        </div>
        <div class="col-md-5 my-5 mx-1" style="background-color:#ffffffbe; border-radius: 15px;">

            <canvas id="grafico6"></canvas>
        </div>
        <div class="col-md-6 my-5 mx-1" style="background-color:#ffffffbe; border-radius: 15px;">

            <canvas id="grafico2"></canvas>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryajax")
    <!--Librería para gráficos-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.2.2/Chart.bundle.min.js"></script>
    <script src="~/Scripts/graficoChartJS.js"></script>
    <script type="text/javascript">

        var colores = @Html.Raw(Json.Encode(ViewBag.MasVendido.Colores));
        colores = colores.split(",");
        var etiquetas = @Html.Raw(Json.Encode(ViewBag.MasVendido.Etiquetas));
        etiquetas = etiquetas.split(",");
        var valores = @Html.Raw(Json.Encode(ViewBag.MasVendido.Valores));
        valores = valores.split(",");
        var titulo = @Html.Raw(Json.Encode(ViewBag.MasVendido.titulo));
        var tituloEtiquetas = @Html.Raw(Json.Encode(ViewBag.MasVendido.tituloEtiquetas));
        var tipo = @Html.Raw(Json.Encode(ViewBag.MasVendido.tipo));
        grafico5(titulo, tituloEtiquetas, tipo, colores, etiquetas, valores);
    </script>

    <script type="text/javascript">
        var colores = @Html.Raw(Json.Encode(ViewBag.Evaluacion.Colores));
        colores = colores.split(",");
        var etiquetas = @Html.Raw(Json.Encode(ViewBag.Evaluacion.Etiquetas));
        etiquetas = etiquetas.split(",");
        var valores = @Html.Raw(Json.Encode(ViewBag.Evaluacion.Valores));
        valores = valores.split(",");
        var titulo = @Html.Raw(Json.Encode(ViewBag.Evaluacion.titulo));
        var tituloEtiquetas = @Html.Raw(Json.Encode(ViewBag.Evaluacion.tituloEtiquetas));
        var tipo = @Html.Raw(Json.Encode(ViewBag.Evaluacion.tipo));
        grafico6(titulo, tituloEtiquetas, tipo, colores, etiquetas, valores);
    </script>

    <script type="text/javascript">
        var colores = @Html.Raw(Json.Encode(ViewBag.Destacado.Colores));
        colores = colores.split(",");
        var etiquetas = @Html.Raw(Json.Encode(ViewBag.Destacado.Etiquetas));
        etiquetas = etiquetas.split(",");
        var valores = @Html.Raw(Json.Encode(ViewBag.Destacado.Valores));
        valores = valores.split(",");
        var titulo = @Html.Raw(Json.Encode(ViewBag.Destacado.titulo));
        var tituloEtiquetas = @Html.Raw(Json.Encode(ViewBag.Destacado.tituloEtiquetas));
        var tipo = @Html.Raw(Json.Encode(ViewBag.Destacado.tipo));
        grafico2(titulo, tituloEtiquetas, tipo, colores, etiquetas, valores);
    </script>
}
